<Window x:Class="UniCast.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UniCast" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <StackPanel Background="#0F0F0F" Grid.Column="0" Margin="12">
            <TextBlock Text="UniCast" Foreground="White" FontWeight="Bold" FontSize="18" Margin="4,0,0,16"/>
            <Button x:Name="BtnControl"  Content="Kontrol"  Margin="0,4,0,0" Height="36"/>
            <Button x:Name="BtnTargets"  Content="Hedefler" Margin="0,4,0,0" Height="36"/>
            <Button x:Name="BtnSettings" Content="Ayarlar"  Margin="0,4,0,0" Height="36"/>
        </StackPanel>

        <!-- İçerik -->
        <ContentControl x:Name="MainContent" Grid.Column="1" />
    </Grid>
</Window>
