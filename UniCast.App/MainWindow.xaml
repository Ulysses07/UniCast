<Window x:Class="UniCast.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="UniCast Studio" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgDark}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content - TabControl -->
        <TabControl x:Name="MainTabControl" Grid.Column="1" Margin="10"
                    Background="Transparent" BorderThickness="0">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </TabControl.ItemContainerStyle>

            <TabItem x:Name="ControlTab">
                <ContentControl x:Name="ControlTabContent"/>
            </TabItem>
            <TabItem x:Name="PreviewTab">
                <ContentControl x:Name="PreviewTabContent"/>
            </TabItem>
            <TabItem x:Name="TargetsTab">
                <ContentControl x:Name="TargetsTabContent"/>
            </TabItem>
            <TabItem x:Name="ChatTab">
                <ContentControl x:Name="ChatTabContent"/>
            </TabItem>
            <TabItem x:Name="SettingsTab">
                <ContentControl x:Name="SettingsTabContent"/>
            </TabItem>
            <TabItem x:Name="LicenseTab">
                <ContentControl x:Name="LicenseTabContent"/>
            </TabItem>
        </TabControl>

        <!-- DÜZELTME v18: Platform Connection Status Bar -->
        <Border x:Name="StatusBar"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch"
                Background="{StaticResource BgLight}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Height="32"
                Margin="10,0,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Platform Status Indicators -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                    <TextBlock Text="Platformlar:" Foreground="{StaticResource TextSecondary}" 
                               VerticalAlignment="Center" Margin="0,0,10,0" FontSize="11"/>

                    <!-- YouTube Status -->
                    <Border x:Name="YouTubeStatus" CornerRadius="3" Padding="6,2" Margin="2,0"
                            Background="#1a1a1a" ToolTip="YouTube: Bağlı değil">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="YouTubeIndicator" Width="8" Height="8" Fill="#666" Margin="0,0,4,0"/>
                            <TextBlock Text="YT" Foreground="{StaticResource TextSecondary}" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Twitch Status -->
                    <Border x:Name="TwitchStatus" CornerRadius="3" Padding="6,2" Margin="2,0"
                            Background="#1a1a1a" ToolTip="Twitch: Bağlı değil">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="TwitchIndicator" Width="8" Height="8" Fill="#666" Margin="0,0,4,0"/>
                            <TextBlock Text="TW" Foreground="{StaticResource TextSecondary}" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- TikTok Status -->
                    <Border x:Name="TikTokStatus" CornerRadius="3" Padding="6,2" Margin="2,0"
                            Background="#1a1a1a" ToolTip="TikTok: Bağlı değil">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="TikTokIndicator" Width="8" Height="8" Fill="#666" Margin="0,0,4,0"/>
                            <TextBlock Text="TT" Foreground="{StaticResource TextSecondary}" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Instagram Status -->
                    <Border x:Name="InstagramStatus" CornerRadius="3" Padding="6,2" Margin="2,0"
                            Background="#1a1a1a" ToolTip="Instagram: Bağlı değil">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="InstagramIndicator" Width="8" Height="8" Fill="#666" Margin="0,0,4,0"/>
                            <TextBlock Text="IG" Foreground="{StaticResource TextSecondary}" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Facebook Status -->
                    <Border x:Name="FacebookStatus" CornerRadius="3" Padding="6,2" Margin="2,0"
                            Background="#1a1a1a" ToolTip="Facebook: Bağlı değil">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="FacebookIndicator" Width="8" Height="8" Fill="#666" Margin="0,0,4,0"/>
                            <TextBlock Text="FB" Foreground="{StaticResource TextSecondary}" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Center: Stream Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse x:Name="StreamStatusIndicator" Width="8" Height="8" Fill="#666" Margin="0,0,6,0"/>
                    <TextBlock x:Name="StreamStatusText" Text="Hazır" 
                               Foreground="{StaticResource TextSecondary}" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Right: Chat Stats -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock x:Name="ChatStatsText" Text="💬 0 mesaj/dk" 
                               Foreground="{StaticResource TextSecondary}" FontSize="11" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock x:Name="ViewerCountText" Text="👁 --" 
                               Foreground="{StaticResource TextSecondary}" FontSize="11" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border x:Name="Sidebar"
                Grid.Column="0" Grid.ColumnSpan="2"
                Background="{StaticResource BgLight}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,1,0"
                HorizontalAlignment="Left"
                Width="65"
                ClipToBounds="True"
                Panel.ZIndex="100">

            <Border.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Width"
                                             To="220" Duration="0:0:0.2"
                                             AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Width"
                                             To="65" Duration="0:0:0.2"
                                             AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <StackPanel Margin="0,15,0,0">

                <Grid Height="40" Margin="0,0,0,30">
                    <TextBlock Text="U" FontSize="24" FontWeight="Bold" Foreground="{StaticResource Primary}"
                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="23,0,0,0"/>

                    <TextBlock Text="niCast" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextMain}" 
                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="45,0,0,0"/>
                </Grid>

                <Button x:Name="BtnControl" Content=" 📡    Yayın Paneli" Style="{StaticResource NavButton}" Margin="0,0,15,0" Click="BtnNav_Click" Tag="0"/>
                <Button x:Name="BtnPreview" Content=" 👁️    Önizleme"    Style="{StaticResource NavButton}" Margin="0,0,15,0" Click="BtnNav_Click" Tag="1"/>
                <Button x:Name="BtnTargets" Content=" 🔗    Platformlar" Style="{StaticResource NavButton}" Margin="0,0,15,0" Click="BtnNav_Click" Tag="2"/>
                <Button x:Name="BtnChat"    Content=" 💬    Sohbet Akışı" Style="{StaticResource NavButton}" Margin="0,0,15,0" Click="BtnNav_Click" Tag="3"/>
                <Button x:Name="BtnSettings" Content=" ⚙️    Ayarlar"     Style="{StaticResource NavButton}" Margin="0,0,15,0" Click="BtnNav_Click" Tag="4"/>
                <Button x:Name="BtnLicense" Content=" 🔑    Lisans"       Style="{StaticResource NavButton}" Margin="0,0,15,0" Click="BtnNav_Click" Tag="5"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
