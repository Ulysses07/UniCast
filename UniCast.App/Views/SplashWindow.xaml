<Window x:Class="UniCast.App.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UniCast Loading" Height="300" Width="500"
        WindowStyle="None" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent">

    <Border Background="#18181B" CornerRadius="15" BorderBrush="#9146FF" BorderThickness="2">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="UniCast" FontSize="48" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#9146FF" BlurRadius="20" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Yayın Stüdyosu Başlatılıyor..." 
                           FontSize="16" Foreground="#AAAAAA" Margin="0,10,0,20" 
                           HorizontalAlignment="Center"/>

                <ProgressBar IsIndeterminate="True" Width="300" Height="4" 
                             BorderThickness="0" Background="#333" Foreground="#9146FF"/>
            </StackPanel>

            <TextBlock Text="v1.0" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                       Foreground="#555" Margin="15"/>
        </Grid>
    </Border>
</Window>