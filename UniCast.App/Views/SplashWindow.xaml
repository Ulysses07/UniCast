<Window x:Class="UniCast.App.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UniCast"
        Width="400" Height="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">

    <Border Background="#1E1E2E" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo ve Başlık -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🎬" FontSize="64" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#7C3AED" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <TextBlock Text="UniCast" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
                
                <TextBlock Text="Multi-Platform Streaming" 
                           FontSize="14" 
                           Foreground="#A0A0B0" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Loading Bar -->
            <Grid Grid.Row="1" Margin="40,0,40,15">
                <Border Background="#2D2D3D" CornerRadius="3" Height="6"/>
                <Border x:Name="LoadingBar" 
                        Background="Linear Gradient StartPoint=0,0 EndPoint=1,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#7C3AED" Offset="0"/>
                            <GradientStop Color="#A855F7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.CornerRadius>
                        <CornerRadius>3,3,3,3</CornerRadius>
                    </Border.CornerRadius>
                </Border>
            </Grid>

            <!-- Durum Metni -->
            <TextBlock Grid.Row="2" 
                       x:Name="StatusText"
                       Text="Yükleniyor..."
                       Foreground="#6A6A7A"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
        </Grid>
    </Border>
</Window>
