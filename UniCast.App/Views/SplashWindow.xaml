<Window x:Class="UniCast.App.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UniCast"
        Height="350" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

	<Border CornerRadius="15" Background="#1a1a2e">
		<Border.Effect>
			<DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
		</Border.Effect>

		<Grid Margin="40">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Logo & Title -->
			<StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
				<TextBlock Text="🎬" FontSize="64" HorizontalAlignment="Center"/>
				<TextBlock Text="UniCast"
                           FontSize="42"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
				<TextBlock Text="Multi-Platform Streaming"
                           FontSize="14"
                           Foreground="#888"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
			</StackPanel>

			<!-- Status Text -->
			<TextBlock x:Name="StatusText"
                       Grid.Row="1"
                       Text="Başlatılıyor..."
                       Foreground="#aaa"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10"/>

			<!-- Progress Bar -->
			<ProgressBar x:Name="LoadingBar"
                         Grid.Row="2"
                         Height="4"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Background="#16213e"
                         Foreground="#e94560"
                         BorderThickness="0"/>

			<!-- Version -->
			<TextBlock Grid.Row="3"
                       Text="v1.0.0"
                       Foreground="#555"
                       FontSize="11"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>
		</Grid>
	</Border>
</Window>
