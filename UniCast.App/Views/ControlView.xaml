<UserControl x:Class="UniCast.App.Views.ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ÜST BAR: Durum + Toggle Buton + Metrikler -->
        <Border Background="{StaticResource BgLight}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Durum -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="DURUM:" FontWeight="Bold" Foreground="{StaticResource TextMuted}" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding Status}" FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource Primary}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Toggle Yayın Butonu -->
                <ToggleButton x:Name="StreamToggleButton" Grid.Column="1" 
                              IsChecked="{Binding IsRunning, Mode=OneWay}"
                              Width="160" Height="38" Margin="190,0,0,0"
                              Cursor="Hand" Click="StreamToggle_Click">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border" CornerRadius="6" 
                                                Background="#2E7D32" BorderThickness="0">
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock x:Name="icon" Text="▶" FontSize="14" 
                                                           Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="text" Text="YAYINI BAŞLAT" 
                                                           FontSize="13" FontWeight="Bold" 
                                                           Foreground="White" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#C62828"/>
                                                <Setter TargetName="icon" Property="Text" Value="⏹"/>
                                                <Setter TargetName="text" Property="Text" Value="YAYINI DURDUR"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#555"/>
                                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <!-- Uyarı Mesajı (varsa) -->
                <TextBlock Grid.Column="2" Text="{Binding Advisory}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           Foreground="Orange" FontWeight="SemiBold" 
                           TextWrapping="Wrap" MaxWidth="300" Margin="15,0"/>

                <!-- Metrikler -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- FPS/Bitrate -->
                    <Border Background="#1a1a1a" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding Metric, TargetNullValue='-- FPS'}" 
                                       Foreground="{StaticResource TextMain}" FontSize="12" 
                                       VerticalAlignment="Center" MinWidth="80"/>
                        </StackPanel>
                    </Border>

                    <!-- Audio Level -->
                    <Border Background="#1a1a1a" CornerRadius="4" Padding="8,5">
                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding ToggleMuteCommand}" 
                                    Width="24" Height="24" Margin="0,0,8,0"
                                    Background="Transparent" BorderThickness="0" 
                                    Cursor="Hand" ToolTip="Sesi Aç/Kapat">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Content" Value="🎤"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                                <Setter Property="Content" Value="🔇"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <ProgressBar Value="{Binding AudioLevel, Mode=OneWay}" 
                                         Maximum="100" Width="80" Height="8" 
                                         VerticalAlignment="Center" 
                                         Background="#333" BorderThickness="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#4CAF50" Offset="0.6"/>
                                        <GradientStop Color="#FFEB3B" Offset="0.8"/>
                                        <GradientStop Color="#F44336" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ANA İÇERİK: 3 Kolonlu Layout -->
        <Grid Grid.Row="1" x:Name="MainContentGrid">
            <Grid.ColumnDefinitions>
                <!-- Mola Kolonu -->
                <ColumnDefinition x:Name="MolaColumn" Width="120" MinWidth="100" MaxWidth="300"/>
                <!-- Splitter 1 -->
                <ColumnDefinition Width="5"/>
                <!-- Kamera Kolonu -->
                <ColumnDefinition x:Name="CameraColumn" Width="*" MinWidth="200"/>
                <!-- Splitter 2 -->
                <ColumnDefinition Width="5"/>
                <!-- Chat Kolonu -->
                <ColumnDefinition x:Name="ChatColumn" Width="300" MinWidth="200" MaxWidth="600"/>
            </Grid.ColumnDefinitions>

            <!-- MOLA PANELİ -->
            <Border Grid.Column="0" Background="{StaticResource BgLight}" CornerRadius="8" Padding="12">
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Text="☕ Mola" FontSize="14" FontWeight="Bold" 
                               Foreground="{StaticResource Primary}" 
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <TextBlock Text="Süre (dk):" Foreground="{StaticResource TextMuted}" 
                               FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding BreakDuration}" Width="50" Height="28" 
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                             Background="#111" Foreground="White" BorderBrush="#444" 
                             HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <ToggleButton Command="{Binding ToggleBreakCommand}" 
                                  IsChecked="{Binding IsOnBreak}"
                                  Height="32" BorderThickness="0" Cursor="Hand">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Content" Value="Mola Ver"/>
                                <Setter Property="Background" Value="#444"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Content" Value="Molayı Bitir"/>
                                        <Setter Property="Background" Value="#E65100"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </StackPanel>
            </Border>

            <!-- SPLITTER 1 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="Transparent" Cursor="SizeWE"
                          DragCompleted="GridSplitter_DragCompleted"/>

            <!-- KAMERA ÖNİZLEME PANELİ -->
            <Border Grid.Column="2" Background="{StaticResource BgLight}" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Başlık -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock Text="📷 Kamera Önizleme" FontSize="13" FontWeight="Bold" 
                                   Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>

                    <!-- Preview Image -->
                    <Border Grid.Row="1" Background="#0a0a0a" CornerRadius="6">
                        <Grid>
                            <Image Source="{Binding PreviewImage}" Stretch="Uniform" 
                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                            <!-- Placeholder (görüntü yokken) -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibleConverter}}">
                                <TextBlock Text="📷" FontSize="48" Foreground="#333" HorizontalAlignment="Center"/>
                                <TextBlock Text="Önizleme kapalı" FontSize="11" Foreground="#444" 
                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Önizleme Butonu -->
                    <Button Grid.Row="2" Content="Önizleme Aç/Kapat" 
                            Command="{Binding StartPreviewCommand}" 
                            Height="28" Margin="0,8,0,0" FontSize="11"/>
                </Grid>
            </Border>

            <!-- SPLITTER 2 -->
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" 
                          Background="Transparent" Cursor="SizeWE"
                          DragCompleted="GridSplitter_DragCompleted"/>

            <!-- CHAT PANELİ -->
            <Border Grid.Column="4" Background="{StaticResource BgLight}" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Başlık -->
                    <TextBlock Text="💬 Canlı Sohbet" FontSize="13" FontWeight="Bold" 
                               Foreground="{StaticResource TextMuted}" 
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>

                    <!-- Platform Filtreleri -->
                    <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <CheckBox Content="YT" IsChecked="{Binding ChatViewModel.ShowYouTube}" 
                                  Foreground="{StaticResource TextMuted}" FontSize="10" Margin="4,0"/>
                        <CheckBox Content="TT" IsChecked="{Binding ChatViewModel.ShowTikTok}" 
                                  Foreground="{StaticResource TextMuted}" FontSize="10" Margin="4,0"/>
                        <CheckBox Content="IG" IsChecked="{Binding ChatViewModel.ShowInstagram}" 
                                  Foreground="{StaticResource TextMuted}" FontSize="10" Margin="4,0"/>
                        <CheckBox Content="FB" IsChecked="{Binding ChatViewModel.ShowFacebook}" 
                                  Foreground="{StaticResource TextMuted}" FontSize="10" Margin="4,0"/>
                    </WrapPanel>

                    <!-- Chat Listesi -->
                    <ListView Grid.Row="2" x:Name="ChatListView"
                              ItemsSource="{Binding ChatViewModel.View}"
                              Background="Transparent" BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1a1a1a" CornerRadius="5" Padding="8,5" Margin="0,1">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Author}" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource Primary}" FontSize="11"/>
                                            <TextBlock Text=" • " Foreground="#555" FontSize="10"/>
                                            <TextBlock Text="{Binding Source}" Foreground="#555" 
                                                       FontSize="9" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Text}" TextWrapping="Wrap" 
                                                   Foreground="{StaticResource TextMain}" FontSize="11" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
