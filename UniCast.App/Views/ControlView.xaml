<UserControl x:Class="UniCast.App.Views.ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource BgLight}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="DURUM:" FontWeight="Bold" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Status}" FontSize="20" FontWeight="Bold" Margin="10,0,0,0" Foreground="{StaticResource Primary}"/>
                </StackPanel>

                <TextBlock Text="{Binding Advisory}" HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Foreground="Orange" FontWeight="SemiBold" TextWrapping="Wrap" MaxWidth="400"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource BgLight}" CornerRadius="8" Padding="20" Margin="0,0,10,20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📊 Yayın İstatistikleri" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Metric}" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="FPS / Bitrate" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource BgLight}" CornerRadius="8" Padding="20" Margin="10,0,0,20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="👁️" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Button Content="Önizlemeyi Aç / Kapat" Command="{Binding StartPreviewCommand}" 
                            Width="180" Height="40" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="▶ YAYINI BAŞLAT" Command="{Binding StartCommand}" 
                    Height="70" Margin="0,0,10,0" FontSize="20" FontWeight="Bold"
                    Background="#2E7D32" BorderBrush="#1B5E20"/>

            <Button Grid.Column="1" Content="⏹ YAYINI DURDUR" Command="{Binding StopCommand}" 
                    Height="70" Margin="10,0,0,0" FontSize="20" FontWeight="Bold"
                    Background="#C62828" BorderBrush="#B71C1C"/>
        </Grid>
    </Grid>
</UserControl>