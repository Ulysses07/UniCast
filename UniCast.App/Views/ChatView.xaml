<UserControl x:Class="UniCast.App.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Border Background="{StaticResource BgLight}" CornerRadius="8" Padding="10" Margin="0,0,0,15">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<CheckBox Content="YouTube" IsChecked="{Binding ShowYouTube}" Margin="10,0" Foreground="{StaticResource TextMain}"/>
				<CheckBox Content="TikTok" IsChecked="{Binding ShowTikTok}" Margin="10,0" Foreground="{StaticResource TextMain}"/>
				<CheckBox Content="Instagram" IsChecked="{Binding ShowInstagram}" Margin="10,0" Foreground="{StaticResource TextMain}"/>
				<CheckBox Content="Facebook" IsChecked="{Binding ShowFacebook}" Margin="10,0" Foreground="{StaticResource TextMain}"/>
			</StackPanel>
		</Border>

		<ListView Grid.Row="1" ItemsSource="{Binding View}"
                  Background="Transparent" BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
			<ListView.ItemTemplate>
				<DataTemplate>
					<Border Background="{StaticResource BgLight}" CornerRadius="8" Margin="0,2" Padding="10">
						<StackPanel>
							<StackPanel Orientation="Horizontal" Margin="0,0,0,5">
								<TextBlock Text="{Binding Author}" FontWeight="Bold" Foreground="{StaticResource Primary}"/>
								<TextBlock Text=" â€¢ " Foreground="Gray" Margin="5,0"/>
								<TextBlock Text="{Binding Source}" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
							</StackPanel>
							<TextBlock Text="{Binding Text}" TextWrapping="Wrap" Foreground="{StaticResource TextMain}"/>
						</StackPanel>
					</Border>
				</DataTemplate>
			</ListView.ItemTemplate>

			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
					<Setter Property="Background" Value="Transparent"/>
					<Setter Property="BorderThickness" Value="0"/>
					<Setter Property="Margin" Value="0,2"/>
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="ListViewItem">
								<ContentPresenter/>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</ListView.ItemContainerStyle>
		</ListView>
	</Grid>
</UserControl>