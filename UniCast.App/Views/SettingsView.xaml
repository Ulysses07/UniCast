<UserControl x:Class="UniCast.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16" Width="640">

            <TextBlock Text="Aygıtlar" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Kamera" Width="160" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding VideoDevices}"
                          SelectedItem="{Binding DefaultCamera, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Width="320"/>
                <Button Content="Yenile" Margin="8,0,0,0" Command="{Binding RefreshDevicesCommand}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Mikrofon" Width="160" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding AudioDevices}"
                          SelectedItem="{Binding DefaultMicrophone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Width="320"/>
            </StackPanel>

            <Separator Margin="0,12,0,12"/>

            <TextBlock Text="Video / Ses" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Encoder" Width="160" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Encoder, Mode=TwoWay}" Width="120" />
                <TextBlock Text="(auto / h264_nvenc / h264_qsv / h264_amf / libx264)" Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Video Kbps" Width="160" VerticalAlignment="Center"/>
                <TextBox Text="{Binding VideoKbps}" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Audio Kbps" Width="160" VerticalAlignment="Center"/>
                <TextBox Text="{Binding AudioKbps}" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="FPS" Width="160" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Fps}" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Çözünürlük (W x H)" Width="160" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Width}" Width="100" Margin="0,0,8,0"/>
                <TextBox Text="{Binding Height}" Width="100"/>
            </StackPanel>
            <!-- Instagram Ayarları -->
            <GroupBox Header="Instagram" Margin="0,16,0,0">
                <StackPanel Margin="12">
                    <TextBlock Text="User ID (numeric)" />
                    <TextBox Text="{Binding InstagramUserId, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,4,0,12" />

                    <TextBlock Text="Session ID (cookie 'sessionid=')" />
                    <!-- PasswordBox: binding için code-behind kullanıyoruz -->
                    <PasswordBox x:Name="PwdInstagramSession"
                     PasswordChanged="PwdInstagramSession_PasswordChanged"
                     Margin="0,4,0,12" />

                    <TextBlock Text="Not: Instagram canlı chat için hesapta aktif canlı yayın ve geçerli sessionid gerekir." 
                   Foreground="DarkOrange" TextWrapping="Wrap" />
                </StackPanel>
            </GroupBox>
            <!-- Facebook Ayarları -->
            <GroupBox Header="Facebook" Margin="0,16,0,0">
                <StackPanel Margin="12">
                    <TextBlock Text="Page ID (numeric)" />
                    <TextBox Text="{Binding FacebookPageId, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12"/>

                    <TextBlock Text="Live Video ID (opsiyonel — doğrudan o yayından okuyacak)" />
                    <TextBox Text="{Binding FacebookLiveVideoId, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12"/>

                    <TextBlock Text="Page Access Token" />
                    <PasswordBox x:Name="PwdFacebookToken"
                 PasswordChanged="PwdFacebookToken_PasswordChanged"
                 Margin="0,4,0,12"/>
                    <TextBlock Text="Not: Token sayfa yetkili uzun ömürlü olmalı (pages_read_engagement)."
               Foreground="DarkOrange" TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>



            <Separator Margin="0,12,0,12"/>

            <TextBlock Text="Kayıt" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>

            <CheckBox Content="Yerel kayıt (FLV)" IsChecked="{Binding EnableLocalRecord}" Margin="0,4,0,4"/>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Kayıt Klasörü" Width="160" VerticalAlignment="Center"/>
                <TextBox Text="{Binding RecordFolder}" Width="360"/>
                <Button Content="Seç..." Command="{Binding BrowseRecordFolderCommand}" Margin="8,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Kaydet" Width="120" Command="{Binding SaveCommand}"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
