<UserControl x:Class="UniCast.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1200">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="800" Width="764">

            <TextBlock Text="âš™ï¸ Ayarlar" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource TextMain}"/>

            <Border Background="{StaticResource BgLight}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Kamera ve Mikrofon" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="{StaticResource Primary}"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Kamera" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding VideoDevices}"
                                  SelectedValue="{Binding DefaultCamera, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Id" DisplayMemberPath="Name"/>
                        <Button Grid.Column="2" Content="ðŸ”„" Command="{Binding RefreshDevicesCommand}" 
                                Width="40" Margin="10,0,0,0" ToolTip="CihazlarÄ± Yenile"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Mikrofon" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding AudioDevices}"
                                  SelectedValue="{Binding DefaultMicrophone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Id" DisplayMemberPath="Name"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="{StaticResource BgLight}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="YayÄ±n Kalitesi" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="{StaticResource Primary}"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Ã‡Ã¶zÃ¼nÃ¼rlÃ¼k" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding Width}" Width="80" Margin="0,0,10,0"/>
                            <TextBlock Text="x" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Text="{Binding Height}" Width="80"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="FPS" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}"/>
                        <TextBox Grid.Column="1" Text="{Binding Fps}" Width="80" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Video Bitrate (Kbps)" VerticalAlignment="Center" Foreground="{StaticResource TextMuted}"/>
                        <TextBox Grid.Column="1" Text="{Binding VideoKbps}" Width="100" HorizontalAlignment="Left"/>
                    </Grid>

                    <TextBlock Text="Ses Senkronizasyonu (Gecikme)" Margin="0,10,0,5" Foreground="{StaticResource TextMuted}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider Minimum="0" Maximum="2000" TickFrequency="50" IsSnapToTickEnabled="True"
                                Value="{Binding AudioDelayMs}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding AudioDelayMs, StringFormat={}{0} ms}" 
                                   Foreground="{StaticResource TextMain}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="{StaticResource BgLight}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Sosyal Medya Entegrasyonu" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="{StaticResource Primary}"/>

                    <Expander Header="Instagram AyarlarÄ±" Margin="0,0,0,10" Foreground="{StaticResource TextMain}">
                        <StackPanel Margin="10">
                            <TextBlock Text="User ID" Foreground="{StaticResource TextMuted}" Margin="0,5"/>
                            <TextBox Text="{Binding InstagramUserId, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Session ID" Foreground="{StaticResource TextMuted}" Margin="0,10,0,5"/>
                            <PasswordBox x:Name="PwdInstagramSession" PasswordChanged="PwdInstagramSession_PasswordChanged"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Facebook AyarlarÄ±" Foreground="{StaticResource TextMain}">
                        <StackPanel Margin="10">
                            <TextBlock Text="Page Access Token" Foreground="{StaticResource TextMuted}" Margin="0,5"/>
                            <PasswordBox x:Name="PwdFacebookToken" PasswordChanged="PwdFacebookToken_PasswordChanged"/>
                            <TextBlock Text="Page ID" Foreground="{StaticResource TextMuted}" Margin="0,10,0,5"/>
                            <TextBox Text="{Binding FacebookPageId, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>

            <Border Background="{StaticResource BgLight}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Yerel KayÄ±t" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="{StaticResource Primary}"/>

                    <CheckBox Content="YayÄ±n sÄ±rasÄ±nda bilgisayara da kaydet (MP4)" 
                              IsChecked="{Binding EnableLocalRecord}" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding RecordFolder}" IsReadOnly="True"/>
                        <Button Grid.Column="1" Content="ðŸ“‚ SeÃ§" Command="{Binding BrowseRecordFolderCommand}" Margin="10,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Button Content="ðŸ’¾ AyarlarÄ± Kaydet" Command="{Binding SaveCommand}" 
                    HorizontalAlignment="Right" Width="200" Height="45" 
                    Background="{StaticResource Primary}" BorderThickness="0"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>