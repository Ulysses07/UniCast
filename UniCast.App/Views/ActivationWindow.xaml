<Window x:Class="UniCast.App.Views.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UniCast - Lisans Aktivasyonu"
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1a1a2e">

	<Window.Resources>
		<Style x:Key="ModernTextBox" TargetType="TextBox">
			<Setter Property="Background" Value="#16213e"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="#0f3460"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Padding" Value="10,8"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>

		<Style x:Key="ModernButton" TargetType="Button">
			<Setter Property="Background" Value="#e94560"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="20,12"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#ff6b6b"/>
				</Trigger>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Background" Value="#555"/>
					<Setter Property="Foreground" Value="#888"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Logo/Title -->
		<StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
			<TextBlock Text="🎬" FontSize="48" HorizontalAlignment="Center"/>
			<TextBlock Text="UniCast" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
			<TextBlock Text="Lisans Aktivasyonu" FontSize="14" Foreground="#888" HorizontalAlignment="Center" Margin="0,5,0,0"/>
		</StackPanel>

		<!-- Hardware ID -->
		<StackPanel Grid.Row="1" Margin="0,0,0,15">
			<TextBlock Text="Donanım Kimliği" Foreground="#888" FontSize="12" Margin="0,0,0,5"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<TextBox x:Name="txtHardwareId"
                         Grid.Column="0"
                         Style="{StaticResource ModernTextBox}"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="11"/>
				<Button Grid.Column="1"
                        Content="📋"
                        Width="40"
                        Margin="5,0,0,0"
                        Click="CopyHardwareId_Click"
                        ToolTip="Kopyala"
                        Style="{StaticResource ModernButton}"
                        Background="#0f3460"/>
			</Grid>
		</StackPanel>

		<!-- License Key Input -->
		<StackPanel Grid.Row="2" Margin="0,0,0,15">
			<TextBlock Text="Lisans Anahtarı" Foreground="#888" FontSize="12" Margin="0,0,0,5"/>
			<TextBox x:Name="txtLicenseKey"
                     Style="{StaticResource ModernTextBox}"
                     FontFamily="Consolas"
                     MaxLength="29"
                     CharacterCasing="Upper"
                     TextChanged="TxtLicenseKey_TextChanged"/>
			<TextBlock Text="Format: XXXXX-XXXXX-XXXXX-XXXXX-XXXXX"
                       Foreground="#555"
                       FontSize="10"
                       Margin="0,3,0,0"/>
		</StackPanel>

		<!-- Activate Button -->
		<Button x:Name="btnActivate"
                Grid.Row="3"
                Content="Aktive Et"
                Style="{StaticResource ModernButton}"
                Click="Activate_Click"
                IsEnabled="False"
                Margin="0,10,0,0"/>

		<!-- Progress Bar -->
		<ProgressBar x:Name="progressBar"
                     Grid.Row="4"
                     Height="4"
                     Margin="0,15,0,0"
                     IsIndeterminate="False"
                     Visibility="Collapsed"
                     Background="#16213e"
                     Foreground="#e94560"/>

		<!-- Status Message -->
		<Border x:Name="StatusBorder"
                Grid.Row="5"
                Margin="0,15,0,0"
                CornerRadius="5"
                Padding="15,10"
                Visibility="Collapsed">
			<TextBlock x:Name="txtStatus"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       FontSize="13"/>
		</Border>

		<!-- Links -->
		<StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
			<TextBlock>
				<Hyperlink Click="BuyLicense_Click" Foreground="#e94560">
					Lisans Satın Al
				</Hyperlink>
			</TextBlock>
			<TextBlock Text=" | " Foreground="#555"/>
			<TextBlock>
				<Hyperlink Click="TrialMode_Click" Foreground="#888">
					Deneme Modunda Devam Et
				</Hyperlink>
			</TextBlock>
		</StackPanel>

		<!-- Footer -->
		<TextBlock Grid.Row="7"
                   Text="© 2024 UniCast. Tüm hakları saklıdır."
                   Foreground="#444"
                   FontSize="11"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"/>
	</Grid>
</Window>
