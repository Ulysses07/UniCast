<UserControl x:Class="UniCast.App.Views.PreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

	<Grid Background="#111">
		<Image Source="{Binding PreviewImage}" Stretch="Uniform"/>

		<Canvas Name="OverlayCanvas" Background="Transparent">

			<Border Name="DraggableChatBox"
                    Width="200" Height="150"
                    Canvas.Left="24" Canvas.Top="24"
                    BorderBrush="Yellow"
                    BorderThickness="2"
                    Background="#44000000"
                    Cursor="SizeAll"
                    MouseLeftButtonDown="ChatBox_MouseDown"
                    MouseLeftButtonUp="ChatBox_MouseUp"
                    MouseMove="ChatBox_MouseMove">

				<TextBlock Text="Chat Overlay (Taşı)"
                           Foreground="Yellow"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"/>
			</Border>

		</Canvas>
	</Grid>
</UserControl>