<Window x:Class="UniCast.App.Views.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UniCast - Lisans Aktivasyonu"
        Width="500" Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E2E">

    <Window.Resources>
        <!-- Stil tanımları -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D3D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3D3D4D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#FFFFFF"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#7C3AED"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8B5CF6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6D28D9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#4A4A5A"/>
                    <Setter Property="Foreground" Value="#8A8A9A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#3D3D4D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4D4D5D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo ve Başlık -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="🎬" FontSize="48" HorizontalAlignment="Center"/>
            <TextBlock Text="UniCast" FontSize="28" FontWeight="Bold" 
                       Foreground="#FFFFFF" HorizontalAlignment="Center"/>
            <TextBlock Text="Lisans Aktivasyonu" FontSize="14" 
                       Foreground="#A0A0B0" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Açıklama -->
        <TextBlock Grid.Row="1" 
                   Text="Lisans anahtarınızı aşağıya girin. Lisans anahtarı satın alma işlemi sonrası e-posta ile gönderilir."
                   Foreground="#A0A0B0" 
                   FontSize="13"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <!-- Lisans Key Girişi -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Lisans Anahtarı" 
                       Foreground="#FFFFFF" FontSize="13" FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <TextBox Grid.Row="1" 
                     x:Name="LicenseKeyTextBox"
                     Style="{StaticResource ModernTextBox}"
                     MaxLength="29"
                     CharacterCasing="Upper"
                     TextChanged="LicenseKeyTextBox_TextChanged"
                     ToolTip="Format: XXXXX-XXXXX-XXXXX-XXXXX-XXXXX"/>
        </Grid>

        <!-- Hardware ID (Salt okunur) -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Donanım Kimliği" 
                       Foreground="#A0A0B0" FontSize="12"
                       Margin="0,0,0,5"/>

            <Border Grid.Row="1" Background="#2D2D3D" CornerRadius="4" Padding="10,8">
                <TextBlock x:Name="HardwareIdText" 
                           Foreground="#6A6A7A" 
                           FontFamily="Consolas"
                           FontSize="12"/>
            </Border>
        </Grid>

        <!-- Durum Mesajı -->
        <Border Grid.Row="4" 
                x:Name="StatusBorder"
                Background="#2D2D3D" 
                CornerRadius="6" 
                Padding="15"
                Visibility="Collapsed"
                VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusIcon" FontSize="18" Margin="0,0,10,0"/>
                <TextBlock x:Name="StatusText" 
                           Foreground="#FFFFFF" 
                           FontSize="13"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Butonlar -->
        <Grid Grid.Row="5" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    x:Name="CancelButton"
                    Content="İptal"
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"/>

            <Button Grid.Column="2"
                    x:Name="ActivateButton"
                    Content="Aktifleştir"
                    Style="{StaticResource ModernButton}"
                    IsEnabled="False"
                    Click="ActivateButton_Click"/>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="6"
                x:Name="LoadingOverlay"
                Background="#CC1E1E2E"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="36" HorizontalAlignment="Center"/>
                <TextBlock x:Name="LoadingText" 
                           Text="Lisans doğrulanıyor..."
                           Foreground="#FFFFFF"
                           FontSize="14"
                           Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
