<Window x:Class="UniCast.App.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UniCast Overlay"
        Width="400" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#E6181825" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#20FFFFFF" CornerRadius="10,10,0,0" Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Indicator -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="Gray" Margin="0,0,8,0"/>
                        <TextBlock x:Name="StatusText" Text="KAPALI" Foreground="#888" FontSize="11" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Title -->
                    <TextBlock Grid.Column="1" Text="UniCast" Foreground="White" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <!-- Minimize Button -->
                    <Button Grid.Column="2" Content="─" Width="24" Height="24"
                            Background="Transparent" Foreground="#888" BorderThickness="0"
                            Click="MinimizeButton_Click" Cursor="Hand"
                            ToolTip="Gizle"/>
                </Grid>
            </Border>

            <!-- Chat Messages -->
            <ScrollViewer x:Name="ChatScrollViewer" Grid.Row="1" 
                          VerticalScrollBarVisibility="Hidden"
                          Margin="10">
                <ItemsControl x:Name="ChatMessages">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,3" Padding="8,5" Background="#15FFFFFF" CornerRadius="5">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Platform Badge -->
                                        <Border Background="{Binding PlatformColor}" CornerRadius="3" 
                                                Padding="4,1" Margin="0,0,6,0">
                                            <TextBlock Text="{Binding PlatformShort}" 
                                                       Foreground="White" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                        <!-- Username -->
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   Foreground="#BB86FC" FontWeight="SemiBold" FontSize="12"/>
                                    </StackPanel>
                                    <!-- Message -->
                                    <TextBlock Text="{Binding Message}" 
                                               Foreground="White" FontSize="13" 
                                               TextWrapping="Wrap" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Break Overlay -->
            <Border x:Name="BreakOverlay" Grid.Row="1" 
                    Background="#DD181825" Visibility="Collapsed"
                    CornerRadius="0">
                <Grid>
                    <!-- Arka Plan Görseli (GIF/PNG) -->
                    <Image x:Name="BreakImage" Stretch="Uniform" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                    <!-- Metin İçerikleri -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Varsayılan emoji (görsel yoksa) -->
                        <TextBlock x:Name="BreakEmoji" Text="☕" FontSize="64" HorizontalAlignment="Center"/>

                        <!-- Başlık -->
                        <TextBlock x:Name="BreakTitle" Text="Mola" FontSize="24" Foreground="White" 
                                   FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>

                        <!-- Alt Başlık -->
                        <TextBlock x:Name="BreakSubtitle" Text="Birazdan döneceğim..." FontSize="14" Foreground="#CCCCCC" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <!-- Geri Sayım -->
                        <TextBlock x:Name="BreakCountdown" Text="05:00" 
                                   FontSize="48" Foreground="#e94560" 
                                   FontFamily="Consolas" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#15FFFFFF" CornerRadius="0,0,10,10" Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="ViewerCount" Grid.Column="0" 
                               Text="👥 0" Foreground="#aaa" FontSize="12"/>
                    <TextBlock x:Name="UptimeText" Grid.Column="1" 
                               Text="⏱ 00:00:00" Foreground="#aaa" FontSize="12"
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
