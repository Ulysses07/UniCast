{
  "manifest_version": 3,
  "name": "UniCast Chat Bridge",
  "description": "Instagram, Facebook ve TikTok Live chat'i UniCast'e aktarÄ±r",
  "version": "2.0.0",
  "author": "UniCast",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://www.instagram.com/*",
    "*://www.facebook.com/*",
    "*://web.facebook.com/*",
    "*://www.tiktok.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.instagram.com/*/live/*",
        "*://www.instagram.com/*/live"
      ],
      "js": ["content-instagram.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.facebook.com/*/videos/*",
        "*://www.facebook.com/watch/live/*",
        "*://www.facebook.com/watch/?v=*",
        "*://www.facebook.com/*/live",
        "*://www.facebook.com/*/live/*",
        "*://web.facebook.com/*/videos/*",
        "*://web.facebook.com/watch/live/*"
      ],
      "js": ["content-facebook.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.tiktok.com/@*/live",
        "*://www.tiktok.com/@*/live/*"
      ],
      "js": ["content-tiktok.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
